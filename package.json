{
  "name": "fadboilerplate",
  "version": "1.0.0",
  "description": "Greetings! This is the fadboilerplate package built on _s, or underscores.",
  "author": "First Ascent Design",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "fadboilerplate"
  ],
  "homepage": "https://firstascentdesign.com",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/firstascentdesignllc/fadboilerplate/src/master/"
  },
  "devDependencies": {
    "@wordpress/scripts": "^9.0.0",
    "archiver": "^4.0.1",
    "autoprefixer": "^9.7.6",
    "node-sass": "^4.14.1",
    "npm-watch": "^0.6.0",
    "postcss-cli": "^7.1.1",
    "rtlcss": "^2.5.0"
  },
  "dependencies": {
    "bootstrap": "^4.5.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "watch": {
    "watch:scss": {
      "patterns": [
        "scss",
        "blocks"
      ],
      "extensions": "scss",
      "legacyWatch": true,
      "delay": 5000,
      "inherit": true
    }
  },
  "scripts": {
    "//": "--- RUNTIME SCRIPTS ---",
    "scss:main": "node-sass scss/style.scss style.css --output-style compressed --source-map true",
    "scss:woocommerce": "node-sass scss/woocommerce.scss woocommerce.css --output-style compressed --source-map true",
    "compile:css": "npm run scss:main && npm run scss:woocommerce",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:scss": "wp-scripts lint-style 'scss/**/*.scss' --fix || true",
    "lint:js": "wp-scripts lint-js 'js/*.js' --fix || true",
    "prefix:css": "postcss --use autoprefixer --replace style.css && postcss --use autoprefixer --replace woocommerce.css",
    "bundle": "node bundle.js",
    "watch:scss": "npm run lint:scss && npm run compile:css && npm run prefix:css",
    "prod:scss:main": "node-sass scss/style.scss dist/style.css --output-style compressed",
    "prod:scss:woocommerce": "node-sass scss/woocommerce.scss dist/woocommerce.css --output-style compressed",
    "prod:compile:css": "npm run prod:scss:main && npm run prod:scss:woocommerce",
    "prod:prefix:css": "postcss --use autoprefixer --replace dist/style.css --no-map && postcss --use autoprefixer --replace dist/woocommerce.css --no-map",
    "develop": "npm-watch",
    "build": "npm run prod:compile:css && npm run prod:prefix:css"
  }
}
